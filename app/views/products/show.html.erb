<div class="container">
    <div class="row">
      <div class="col s12 m7">
        <div class="card">
          <div class="card-image">
            <img src=<%= @product.img %>>
          </div>
          <div class="card-content">
            <h4><%= @product.product_name %></h4>
            <h5><%= @product.price %>,000원</h5>
            <p><%= @product.product_describe %></p>
          </div>
        </div>
      </div>
    </div>
    <% @product.buy_link.each do |v| %>
      <div class="video-container">
        <iframe width="853" height="480" src="//www.youtube.com/embed/<%= v %>?rel=0" frameborder="0" allowfullscreen></iframe>
      </div>
      <br>
    <% end %>
    
    <%= link_to '뒤로가기', products_path, :class => "waves-effect waves-light btn-large pink lighten-2", :style => "width:100%;height:20%;color:white;"%>
</div>